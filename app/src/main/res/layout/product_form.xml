<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Product"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="30dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/td"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/image"
        android:layout_gravity="center"
android:src="@drawable/hamro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       app:cardBackgroundColor="#283593"
       android:outlineSpotShadowColor="@color/teal_700"
       android:layout_margin="15dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/edt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_margin="4dp"
            android:padding="10dp"
            >

        </ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:id="@+id/name"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"

        android:background="@drawable/edt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_margin="4dp"
            android:padding="10dp"
            >

        </ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="number"
            android:id="@+id/price"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"

        android:background="@drawable/edt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_margin="4dp"
            android:padding="10dp"
            >

        </ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:id="@+id/description"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>


    </LinearLayout>
<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinner"
    android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"

        android:background="@drawable/edt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_margin="4dp"
            android:padding="10dp"
            >

        </ImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Used For"
            android:inputType="number"
            android:id="@+id/usedFor"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_margin="10dp">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negotiable"
        android:id="@+id/r1"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed Price"
        android:id="@+id/r2"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"/>

</LinearLayout>
<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinner2"
    android:background="@color/white"
    android:layout_margin="10dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="POST"
        android:id="@+id/post"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/td"/>

</LinearLayout>


   </androidx.cardview.widget.CardView>






</LinearLayout>
</ScrollView>